# Set defaults.
defaults

# Enable or disable TLS/SSL encryption.
tls on
tls_starttls on
#tls_trust_file /etc/pki/tls/certs/ca-bundle.crt
# Other defaults
port 25
auth off
from mailmon@srce.hr
domain mon.srce.hr
syslog LOG_MAIL

# Set up account's settings.
account smtp.srce.hr
host smtp.srce.hr

account smtp2.srce.hr
host smtp2.srce.hr

account smtp3.srce.hr
host smtp3.srce.hr

# Set a default account
account default: smtp.srce.hr